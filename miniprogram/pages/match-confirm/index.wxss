.container {
    display: flex;
    flex-direction: column;
    padding: 20rpx 30rpx;
    padding-bottom: 220rpx;
    background-color: #f5f5f5;
    height: 100vh;
    box-sizing: border-box;
    overflow: hidden;
}

.header {
    text-align: center;
    padding: 30rpx 0;
    flex-shrink: 0;
}

.title {
    display: block;
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
}

.subtitle {
    display: block;
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
}

/* 可滚动内容区域 */
.scroll-content {
    flex: 1;
    overflow: hidden;
}

/* 分组容器 */
.group-section {
    width: 100%;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

/* A组样式 - 红色主题 */
.group-a {
    background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
    border: 2rpx solid #ffccc7;
}

.group-a .group-header {
    background: linear-gradient(90deg, #D42426 0%, #e84545 100%);
    color: #fff;
}

.group-a .pair-code-badge {
    background: #D42426;
    color: #fff;
}

/* B组样式 - 灰蓝主题 */
.group-b {
    background: linear-gradient(135deg, #f0f5ff 0%, #e6f4ff 100%);
    border: 2rpx solid #bae0ff;
}

.group-header-b {
    background: linear-gradient(90deg, #597ef7 0%, #85a5ff 100%) !important;
    color: #fff;
}

/* 分组头部 */
.group-header {
    display: flex;
    align-items: center;
    padding: 24rpx 30rpx;
    gap: 16rpx;
}

.group-icon {
    font-size: 36rpx;
}

.group-title {
    flex: 1;
    font-size: 30rpx;
    font-weight: 600;
}

.group-count {
    font-size: 24rpx;
    opacity: 0.9;
    background: rgba(255, 255, 255, 0.2);
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
}

/* 配对卡片 */
.pair-card {
    background: #fff;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    position: relative;
}

.pair-code-badge {
    position: absolute;
    top: -10rpx;
    left: 20rpx;
    padding: 6rpx 20rpx;
    border-radius: 12rpx;
    font-size: 22rpx;
    font-weight: 600;
}

.pair-users {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding-top: 16rpx;
}

.pair-user {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-info {
    text-align: center;
    margin-top: 12rpx;
}

.user-name {
    display: block;
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
}

.user-sub {
    display: block;
    font-size: 22rpx;
    color: #999;
    margin-top: 4rpx;
}

.exchange-icon {
    font-size: 40rpx;
    color: #D42426;
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.2);
        opacity: 0.7;
    }
}

/* B组用户列表 */
.b-users-list {
    padding: 20rpx;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120rpx, 1fr));
    gap: 16rpx;
}

.b-user-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    padding: 16rpx 20rpx;
    border-radius: 12rpx;
    gap: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.user-avatar-small {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.user-name-small {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
}

.user-sub-small {
    font-size: 22rpx;
    color: #999;
    margin-left: 8rpx;
}

/* 空状态 */
.empty-state {
    text-align: center;
    color: #999;
    padding: 100rpx 0;
}

/* 底部按钮 */
.bottom-actions {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    gap: 20rpx;
    padding: 20rpx 30rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    background: #fff;
    box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn {
    flex: 1;
    border-radius: 12rpx;
    font-size: 30rpx;
    font-weight: 600;
    line-height: 2.4;
}

.btn-secondary {
    background: #f5f5f5;
    color: #666;
}

.btn-primary {
    background: linear-gradient(90deg, #D42426 0%, #e84545 100%);
    color: #fff;
}